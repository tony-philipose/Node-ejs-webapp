<!DOCTYPE html>
<html ng-app="angularApp">
  <head>
    <% include ../partials/head %>
    <title>Student details </title>
  </head>
  <body>

        <nav class="navbar navbar navbar-fixed-top navbar-inverse">
          <div class="container-fluid ">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>                        
              </button>
              <a class="navbar-brand navtxt" href="#">SJ school</a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
              <ul class="nav navbar-nav navtxt">
                    <li><a href="/students/list" class="navtxt">Students</a></li>
                    <li><a href="/students/add" class="navtxt">Admission</a></li>
                    <!-- <li><a href="/teach/marks" class="navtxt">Marks</a></li> -->
                  </ul>
                  <ul class="nav navbar-nav navbar-right navtxt">
                      <li><a href="" class="navtxt">logged in as<b> <%= user %></b></a></li>
                      <li class=""><a href="/logout" class="navtxt">Logout</a></li>
                  </ul>
            </div>
          </div>
        </nav>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-3 col-sm-1"></div>
              <div class="col-lg-4 col-md-6 col-sm-10 col-xs-10 box">
                <div class="row">
                  <div class="col-lg-12 col-md-12 col-sm-12 caption"><center>Update student details</center></div>
                  <form name="myForm" id="myForm" action="/students/update" onsubmit="" method="post">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="row">
                            <div class="col-lg-2 col-md-1 col-sm-1"></div>
                            <div class="col-lg-8 col-md-10 col-sm-10"> 
                          <div class="form-group ">
                                <input type="hidden" class="form-control" id="studid" name="studid" value="<%= data.studid %>">
                            <label class="required">First name:</label>
                            <input type="text" class="form-control" id="firstName" name="firstName" value="<%= data.fname %>">
                            <span class="error" id="fname"></span>
                          </div>
                          <div class="form-group">
                            <label class="required">Last name:</label>
                            <input type="text" class="form-control" id="lastName" name="lastName" value="<%= data.lname %>">
                            <span class="error" id="lname"></span>
                          </div>
                          <div class="form-group">
                            <label class="required">Date of birth:</label>
                            <input type="date" class="form-control" id="dob" name="dob" value="<%= data.dob %>">
                            <span class="error" id="dateofBirth"></span>
                          </div>
                           <div>
                                <input type="submit" name="update" id="update" value="Update" class="btn btn-success buttonReg">
                           </div>
                          </div>
                          <div class="col-lg-2 col-md-1 col-sm-1"></div>
                          </div>
                        </div> 
                          <div class="col-lg-6 col-md-6 col-sm-12">
                              <div class="row">
                                  <div class="col-lg-2 col-md-1 col-sm-1"></div>
                                  <div class="col-lg-8 col-md-10 col-sm-10"> 
                             
                             
                              <div class="form-group">
                                <label class="required">Contact no:</label>
                                <input type="text" class="form-control" id="contactNo" name="contactNo" value="<%= data.contact %>">
                                <span class="error" id="contact"></span>
                              </div>
                              <div class="form-group">
                                  <label class="required">Email id:</label>
                                  <input type="email" class="form-control" id="email" name="email" value="<%= data.email %>">
                                  <span class="error" id="mail"></span>
                                </div>
                              <div class="form-group">
                                  <label class="required">Select Class:</label>
                                  <select class="form-control" id="class" name="class">
                                    <option value="<%= data.class %>"><%= data.class %></option>
                                    <option value="1">1 st</option>
                                    <option value="2">2 nd</option>
                                    <option value="5">5 th</option>
                                    <option value="8">8 th</option>
                                    <option value="10">10 th</option>
                                  </select>
                                  <span class="error" id="selectdistrict"></span>
                                </div>
                              <div>
                                  
                                  <input type="button" name="cancel" id="cancel" value="Cancel" class="btn btn-warning buttonReg">
                              </div>
                            </div>
                            <div class="col-lg-2 col-md-1 col-sm-1"></div>
                          </div>  
                          </div>  
                      </div>
                   </form>
                  </div>
                </div>
                <div class="col-sm-1 col-xs-1"></div>
                <div class="col-sm-1 col-xs-1"></div>
                <div class="col-lg-4 col-md-3 col-sm-10 col-xs-10">
                    
                </div>
                <div class="col-sm-1 col-xs-1"></div>
              </div>
            </div> 

      <% include ../partials/footer %>
  </body>
</html>   