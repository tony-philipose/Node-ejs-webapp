    <div class="container">
      <div class="row">
          <div class="col-sm-1 col-xs-1"></div>
        <div class="col-lg-4 col-md-7 col-sm-10 col-xs-10 box">
          <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 caption"><center>Registeration form.</center></div>
            <form name="myForm" id="myForm" action="/students/reg" onsubmit="" method="post">
              <div class="row">
                  <div class="col-lg-6 col-md-6 col-sm-12">
                  <div class="row">
                      <div class="col-lg-2 col-md-1 col-sm-1"></div>
                      <div class="col-lg-8 col-md-10 col-sm-10"> 
                    <div class="form-group ">
                      <label class="required">First name: </label>
                      <input type="text" class="form-control" id="firstName" name="firstName">
                      <span class="error" id="fname"></span>
                    </div>
                    <div class="form-group">
                      <label class="required">Last name:</label>
                      <input type="text" class="form-control" id="lastName" name="lastName">
                      <span class="error" id="lname"></span>
                    </div>
                    <div class="form-group">
                      <label class="required">Date of birth:</label>
                      <input type="date" class="form-control" id="dob" name="dob">
                      <span class="error" id="dateofBirth"></span>
                    </div>
                    <div class="form-group">
                      <label class="required">Gender:</label>
                      <div>
                        <label class="radio-inline">
                          <input type="radio" name="gender" class="gender" id="male" value="male" checked>Male
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="gender" class="gender" id="female" value="female">Female
                        </label>
                      </div> 
                      <span class="error" id="gender"></span> 
                    </div> 
                    </div>
                    <div class="col-lg-2 col-md-1 col-sm-1"></div>
                    </div>
                  </div> 
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="row">
                            <div class="col-lg-2 col-md-1 col-sm-1"></div>
                            <div class="col-lg-8 col-md-10 col-sm-10"> 
                        <div class="form-group">
                          <label class="required">Contact no:</label>
                          <input type="text" class="form-control" id="contactNo" name="contactNo">
                          <span class="error" id="contact"></span>
                        </div>
                        <div class="form-group">
                            <label class="required">Email id:</label>
                            <input type="email" class="form-control" id="email" name="email">
                            <span class="error" id="mail"></span>
                          </div>
                        <div class="form-group">
                            <label class="required">Select Class:</label>
                            <select class="form-control" id="class" name="class">
                              <option>Select Class</option>
                              <option value="1">1 st</option>
                              <option value="2">2 nd</option>
                              <option value="5">5 th</option>
                              <option value="8">8 th</option>
                              <option value="10">10 th</option>
                            </select>
                            <span class="error" id="selectdistrict"></span>
                          </div>
                        <div>
                            <input type="submit" name="save" id="save" value="Save" class="btn btn-success buttonReg">
                            <input type="button" name="cancel" id="cancel" value="Cancel" class="btn btn-warning buttonReg">
                        </div>
                      </div>
                      <div class="col-lg-2 col-md-1 col-sm-1"></div>
                    </div>  
                    </div>  
                </div>
             </form>
            </div>
          </div>
          <div class="col-sm-1 col-xs-1"></div>
          <div class="col-sm-1 col-xs-1"></div>
          <div class="col-lg-4 col-md-4 col-sm-10 col-xs-10">
              <div class="row">
                  <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"><center>
                    <label class="activity">Our Activities</label></center>
                  </div>
              </div>
            <div class="row">
                <div class="col-lg-4 col-md-12 col-sm-4 col-xs-4"> 
                  <center>
                  <img src="/images/c1.jpg" alt="c1"  width="130" height="130"> 
                </center>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-4 col-xs-4"> 
                  <center>
                    <img src="/images/c2.jpg" alt="c1"  width="130" height="130"> 
                  </center>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-4 col-xs-4"> 
                  <center>
                    <img src="/images/c3.jpg" alt="c1"  width="130" height="130"> 
                  </center>
                </div>
            </div>
          </div>
          <div class="col-sm-1 col-xs-1"></div>
        </div>
      </div>  
      <% include ../partials/footer %>
    </body>
    </html>